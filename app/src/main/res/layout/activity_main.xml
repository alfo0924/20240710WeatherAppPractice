            android:text="最低"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="143dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="25"
            android:textAlignment="center"
