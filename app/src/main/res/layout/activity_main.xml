        android:textAlignment="center"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="296dp">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="0dp"
            android:layout_height="157dp"
            android:layout_weight="1"
